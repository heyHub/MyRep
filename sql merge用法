merge into TableThat as a 
using TableThis as b
    on a.tbThisID = b.tbThisID
when matched then
    update set a.tbContent=a.tbContent+'-'+b.tbThisPhone
when not matched then 
insert (tbThisID,tbContent)
values(b.tbThisID,b.tbThisPhone);

